<?xml version="1.0" encoding="utf-8"?>
<s:Group width="100%" height="100%"
		 xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Scroller left="0" right="0" top="30" height="100%">
		<s:DataGroup id="thumbGroup" width="90%" height="90%"
					 itemRenderer="com.altras.flickrSearch.view.renderers.FlickrThumbRenderer">
			<s:layout>
				<s:TileLayout clipAndEnableScrolling="true"/>
			</s:layout>
		</s:DataGroup>
	</s:Scroller>
	
	<s:Button id="searchButton" right="20" label="search"/>
	
	<s:TextInput id="searchText" left="0" right="80"/>
	
</s:Group>
