<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow width="240" height="80"
			xmlns:fx="http://ns.adobe.com/mxml/2009" 
			xmlns:s="library://ns.adobe.com/flex/spark" 
			xmlns:mx="library://ns.adobe.com/flex/mx" 
			xmlns:swiftsuspenders="org.swiftsuspenders.*" >
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:Fade id="showEffect" alphaFrom="0" alphaTo="1" targets="{[bigImage,clickButton]}" duration="1200"  />
	
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" gap="10"
						  paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10"/>
	</s:layout>
	
	<mx:ProgressBar id="imgLoader" width="100%" height="100%" source="bigImage" />
	
	<mx:Image id="bigImage" includeInLayout="false" source=""/>
	
	<s:Button id="clickButton" label="open in flickr" />
	
</s:TitleWindow>
